<div class = "container-fluid">
  <div class = "col-md-4"></div>
  <div class = "col-md-4">
    <%= form_tag "/images/#{@image.id}", method: :patch do %>
      <div class = "form-group">
        <p><%= label_tag :product_name %></p>
        <p><%= text_field_tag :product_name, @image.product.name %></p>
      </div>
      <div class = "form-group">
        <p><%= label_tag :url %></p>
        <p><%= text_field_tag :url, @image.url%></p>
      </div>
      <%= submit_tag "Submit Changes" %>
    <% end %>
  </div>
</div>